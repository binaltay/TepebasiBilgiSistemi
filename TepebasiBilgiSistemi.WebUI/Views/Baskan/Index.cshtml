@model TepebasiBilgiSistemi.WebUI.Models.BaskanViewModels.BaskanIndexViewModel

@section Style {
	<link href="~/plugins/datatables/datatables.min.css" rel="stylesheet" />
}

<div class="col-12">
	<div class="app-card app-card-stats-table h-100 shadow-sm">
		<div class="app-card-header p-3">
			<div class="row justify-content-between align-items-center">
				<div class="col-auto">
					<div class="app-icon-holder">
						
						<i style="font-size:4em;" class="fa-solid fa-people-roof"></i>
					</div>

				</div><!--//col-->
				<div class="col-auto">
					<h4 class="app-card-title">
						Başkanlar
					</h4>
				</div><!--//col-->
				<div class="col-auto">
					<div class="card-header-action">
						<a href="~/Baskan/Create">Başkan Ekle</a>
					</div><!--//card-header-actions-->
				</div><!--//col-->
			</div><!--//row-->
		</div><!--//app-card-header-->

		<div class="app-card-body px-4 w-100">

			<div class="table-responsive">
				<table id="datatables" class="table mb-0 text-left">
					<thead>
						<tr>
							<th class="cell">Renk</th>
							<th class="cell">Adı</th>
							<th class="cell">Düzen</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var baskan in Model.BaskanList.OrderBy(x=>x.Name))
						{
							<tr>
								<td style="width:20%;" class="cell">
									<img style="width:40%;border-radius:50%;" src="~/Uploads/baskan/@baskan.PhotoLink"/>
								</td>
								<td style="width:60%;line-height:8;" class="cell">@baskan.Name</td>
								<td style="width:20%;line-height:6;font-size:1.4em;" class="cell">
									<a asp-action="Detail" asp-route-id="@baskan.Id"><i class="text-info fa-solid fa-circle-info"></i></a>
									<a asp-action="Edit" asp-route-id="@baskan.Id"><i class="text-warning fa-solid fa-pencil"></i></a>									
								</td>
							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th class="cell">Renk</th>
							<th class="cell">Adı</th>
							<th class="cell">Düzen</th>
						</tr>
					</tfoot>
				</table>
			</div><!--//table-responsive-->


		</div><!--//app-card-body-->

		<div class="app-card-footer p-4 mt-auto">
		</div><!--//app-card-footer-->
	</div><!--//app-card-->
</div><!--//col-->
@section Scripts {

	<script src="~/plugins/datatables/datatables.min.js"></script>

	<script>
		window.onload = function () {
			$('#datatables').DataTable({
				"pagingType": "full_numbers",
				"lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
				responsive: true,
				language: {

					url: '//cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json'

				}
			});
		}
	</script>
}


