@model TepebasiBilgiSistemi.WebUI.Models.BaskanViewModels.BaskanDetailsViewModel

@section Style {
}

<div class="col-12">
	<div class="app-card app-card-account shadow-sm d-flex flex-column align-items-start">
		<div class="app-card-header p-3 border-bottom-0">
			<div class="row align-items-center gx-3">
				<div class="col-auto">
					<div class="app-icon-holder">
						<i style="font-size:4em;" class="fa-solid fa-people-roof"></i>
					</div><!--//icon-holder-->

				</div><!--//col-->
				<div class="col-auto">
					<h4 class="app-card-title">@Model.Baskan.FirstOrDefault().Name</h4>
				</div><!--//col-->
			</div><!--//row-->
		</div><!--//app-card-header-->
		<div class="app-card-body px-4 w-100">
			<div class="item border-bottom py-3">
				<div class="row justify-content-between align-items-center">
					<div class="col-auto">
						<div class="item-data">
							<img class="profile-image" src="~/Uploads/baskan/@Model.Baskan.FirstOrDefault().PhotoLink" alt="@Model.Baskan.FirstOrDefault().Name">
						</div>
					</div><!--//col-->	
					<div class="col text-end">
										    <a class="btn-sm app-btn-secondary" href="~/Baskan/Edit/@Model.Baskan.FirstOrDefault().Id">Düzenle</a>
									    </div>
				</div><!--//row-->
			</div><!--//item-->
			@foreach (var item in Model.Baskan.FirstOrDefault().BaskanMudurluk)
			{
				<div class="item border-bottom py-3">
					<div class="row justify-content-between align-items-center">
						<div class="col-auto">
							<div class="item-label"><strong>Müdürlük</strong></div>
							<div class="item-data">@item.Mudurluk.Name</div>
						</div><!--//col-->
						<div class="col text-end">
							<a class="btn-sm app-btn-secondary" href="~/Baskan/BaskanMudurlukDelete/@item.Id">Sil</a>
						</div><!--//col-->
					</div><!--//row-->
				</div>
			
				<!--//item-->
			}
			
			
		</div><!--//app-card-body-->
		<div class="app-card-footer p-4 mt-auto w-100 text-center">
			<a class="btn app-btn-secondary" href="~/Baskan/BaskanMudurluk/@Model.Baskan.FirstOrDefault().Id">Müdürlük Ata</a>
		</div><!--//app-card-footer-->

	</div>
</div><!--//col-->
@section Scripts {

}


