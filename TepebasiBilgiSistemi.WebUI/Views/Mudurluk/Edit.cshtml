@model TepebasiBilgiSistemi.WebUI.Models.MudurlukViewModels.MudurlukUpdateViewModel
<div class="col-12">
    <form method="post" asp-action="Edit" asp-controller="Mudurluk" enctype="multipart/form-data" class="settings-form">
        <input type="hidden" asp-for="Mudurluk.Id" />
        <div class="app-card app-card-account shadow-sm d-flex flex-column align-items-start">
            <div class="app-card-header p-3 border-bottom-0">
                <div class="row align-items-center gx-3">
                    <div class="col-auto">
                        <div class="app-icon-holder">
                            <i style="font-size:4em;" class="fa-solid fa-building-flag"></i>
                        </div><!--//icon-holder-->
                    </div><!--//col-->
                    <div class="col-auto">
                        <h4 class="app-card-title">@Model.Mudurluk.Name</h4>
                    </div><!--//col-->
                </div><!--//row-->
            </div><!--//app-card-header-->
            <div class="app-card-body px-4 w-100">
                <div class="mb-3">
                    <label for="setting-input-1" class="form-label">
                        Müdürlük Adı<span class="ms-2" data-bs-container="body" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="top" data-bs-content="This is a Bootstrap popover example. You can use popover to provide extra info.">
                        </span>
                    </label>
                    <input asp-for="Mudurluk.Name" type="text" class="form-control" id="setting-input-1" placeholder="Müdürlük Adı" required>
                </div>
                <div class="mb-3">
                    <label for="myColor" class="form-label">Renk</label>
                    <input type="color" asp-for="Mudurluk.Color" class="form-control form-control-color" id="myColor" value="@Model.Mudurluk.Color" title="Choose a color">
                </div>
            </div><!--//app-card-body-->
            <div class="app-card-footer p-4 mt-auto">
                <button type="submit" class="btn app-btn-primary">Düzenle</button>
            </div><!--//app-card-footer-->
        </div><!--//app-card-->
    </form>
</div><!--//col-->